<%= form_with(model: pilot, local: true) do |form| %>
  <% if pilot.errors.any? %>
    <% pilot.errors.full_messages.each do |msg| %>
      <div class='alert alert-danger'><%= msg %></div>
    <% end %>
  <% end %>

  <div class="field">
    <%= form.label :name %>:<br>
    <%= form.text_field :name, {:class => 'form-control'} %>
  </div>
  <br>
  <div class="field">
    <%= form.label :age %>:<br>
    <%= form.text_field :age, {:class => 'form-control'} %>
  </div>
  <br>
  <div class="field">
    <%= form.label :pic %>:<br>
    <%= form.text_field :pic, {:class => 'form-control'} %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit({:class => 'btn btn-primary'}) %>
  </div>
<% end %>
