<p id="notice"><%= notice %></p>
<%= link_to 'Edit', edit_plane_path(@plane) %> |
<%= link_to 'Back', planes_path %>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-6 col-sm-12">
            <p>Model: <%= @plane.model%></p>
            <p class="bg-light">Registration: <%= @plane.registration%></p>
            <p>Manufacturer: <%= @plane.manufacturer%></p>
            <p class="bg-light">Age: <%= @plane.age%></p>
            <p>Range: <%= @plane.range%></p><br>
        </div>
        <div class="col-md-6 col-sm-12">
            <div id='map'></div>
        </div>
    </div>
</div>

<script>
    radius = parseInt('<%= @plane.range %>')
    function initMap() {
        var myLatLng = {lat: 51.331231, lng: 0.032755};

        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 4,
            center: myLatLng,
            disableDefaultUI: true
        });

        var marker = new google.maps.Marker({
            position: myLatLng,
            map: map,
            title: 'Airport'  
        });

        var range = new google.maps.Circle({
            strokeColor: '#A9A9A9',
            strokeOpacity: 0.8,
            strokeWeight: 2,
            fillColor: '#000000',
            fillOpacity: 0.35,
            map: map,
            center: myLatLng,
            radius: radius * 1000
        });

        range.bindTo('center', marker, 'position');
        map.fitBounds(range.getBounds());
    }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAceHPKoSuyrSA3yjGsb-krlu7O1oG7Moo&callback=initMap"></script>
